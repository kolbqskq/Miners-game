package widgets

import "miners_game/views/components"

templ BottomPanel(activeTab string) {
    @BottomPanelStyle()
<div id="bottom-panel" class="bottom-panel">

    <div class="bottom-panel_tabs">
        @TabButton("miners", "üë∑ –®–∞—Ö—Ç—ë—Ä—ã", activeTab)
        @TabButton("equipments", "üõ† –ò–Ω—Å—Ç—Ä—É–º–µ–Ω—Ç—ã", activeTab)
        @TabButton("upgrades", "üè™ –£–ª—É—á—à–µ–Ω–∏—è", activeTab)
    </div>

    <div class="shop-grid">
    if activeTab == "miners"{

        @components.ShopCard("–®–∞—Ö—Ç—ë—Ä", "+1.0/—Å–µ–∫", "30 —Å–µ–∫", "5", "small", "miner", "/public/icons/shop/miner-small.png", false, "")
        @components.ShopCard("–®–∞—Ö—Ç—ë—Ä+", "+1.5/—Å–µ–∫", "45 —Å–µ–∫", "50", "normal", "miner", "", false, "")
        @components.ShopCard("–®–∞—Ö—Ç—ë—Ä–ì–∏–≥–∞–±–∞–π—Ç", "+3/—Å–µ–∫", "45 —Å–µ–∫", "450", "strong", "miner", "", false, "")
    }
    if activeTab == "equipments"{
        @components.ShopCard("–ö–∏—Ä–∫–∞", "+1.0/—Å–µ–∫", "30 —Å–µ–∫", "5", "1", "equipment", "", false, "")
        @components.ShopCard("–õ–æ–ø–∞—Ç–∞+", "+1.5/—Å–µ–∫", "45 —Å–µ–∫", "50", "2", "equipment", "", false, "")
    }
    if activeTab == "upgrades"{
        @components.ShopCard("Planet", "+1.0/—Å–µ–∫", "30 —Å–µ–∫", "5", "2", "upgrade", "", false, "")
        @components.ShopCard("Crafter+", "+1.5/—Å–µ–∫", "45 —Å–µ–∫", "50", "1", "upgrade", "", false, "")
    }
    </div>
</div>
}

templ BottomPanelStyle() {
    <style>
        .bottom-panel {
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.75));
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.08);
        padding-top: 8px;
        position: relative;
        overflow: hidden;
    }

    .bottom-panel::before {
        content: "";
        position: absolute;
        inset: -20%;
        background: radial-gradient(120% 80% at 50% 0%, rgba(255, 255, 255, 0.06), transparent 60%);
        transform: translateY(0);
        transition: transform 0.4s ease;
        pointer-events: none;
    }

    .bottom-panel:hover::before {
        transform: translateY(-12px);
    }

    /* ===== TABS ===== */
    .bottom-panel_tabs {
        display: flex;
        gap: 8px;
        padding: 8px 12px 6px;
        margin: 0;
        overflow-x: auto;
        position: relative;
        z-index: 2;
    }

    .bottom-panel::after {
        content: "";
        position: absolute;
        left: 16px;
        right: 16px;
        top: 58px;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.12), transparent);
    }

    .bottom-panel_tabs::-webkit-scrollbar {
        display: none;
    }

    .tab {
        background: rgba(255, 255, 255, 0.06);
        border: none;
        color: rgba(255, 255, 255, 0.75);
        padding: 9px 16px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 700;
        white-space: nowrap;
        cursor: pointer;
        transition: background 0.18s ease, color 0.18s ease, transform 0.12s ease;
    }

    .tab:hover {
        background: rgba(255, 255, 255, 0.12);
        color: white;
    }

    .tab:active {
        transform: scale(0.96);
    }

    /* ACTIVE TAB ‚Äî –ü–û–õ–ù–ê–Ø –ó–ê–õ–ò–í–ö–ê */
    .tab[aria-current="true"] {
        background: linear-gradient(180deg, var(--accent), color-mix(in srgb, var(--accent) 85%, black));
        color: black;
    }

    /* ===== SHOP GRID ANIMATION ===== */
    .shop-grid {
        padding: 6px 12px 12px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
        gap: 14px;
        position: relative;
        z-index: 1;
        animation: tab-fade-in 0.22s ease;
    }

    @keyframes tab-fade-in {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
}
</style>
}