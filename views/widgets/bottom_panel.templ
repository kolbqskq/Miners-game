<style>
    .bottom-panel{
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
    }
    .bottom-panel_tabs {
        display: flex;
        gap: 6px;
        padding: 6px 8px;
        margin-left: 8px;
        margin-bottom: 10px;
    }

    .tab {
        position: relative;
        background: rgba(255,255,255,0.06);
        border: none;
        color: white;
        padding: 6px 12px 10px;
        border-radius: 8px;
        font-size: 13px;
    }

    .tab[aria-current="true"] {
        background: rgba(255, 200, 80, 0.18);
    }

    .tab[aria-current="true"]::after {
        content: "";
        position: absolute;
        inset: auto 8px 4px 8px;
        height: 3px;
        border-radius: 2px;
        background: var(--accent);
    }

    .shop-grid {
        padding: 0 8px 8px;
        margin-top: 4px;
        margin-left: 8px;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
        gap: 12px;
    }

</style>
}