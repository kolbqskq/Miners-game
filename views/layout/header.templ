package layout

templ Header(backgroundColor string) {
    @HeaderStyle()
    <div class="header" style={"background:"+backgroundColor+";"}>
    @Menu()
    {children...} 
    </div>
}

templ HeaderStyle() {
    <style>
    .header{
        width: 100%;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        overflow: hidden;
        padding-bottom: 80px;
    }
    </style>
}